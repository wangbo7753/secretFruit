/*index.wxss*/
.container {
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #eeeeee;
    box-sizing: border-box;
}
.news-title {
    width: 100%;
    margin-top: 20rpx;
    display: flex;
    flex-flow: row wrap;
    align-content: center;
    background-color: #ffffff;
    box-sizing: border-box;
}
.cate-item {
    width: 20%;
    padding: 10rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
.cate-img {
    width: 100rpx;
    height: 100rpx;
    flex: none;
    border-radius: 50%;
}
.cate-brief {
    color: #888888;
    font-size: 18rpx;
    line-height: 24rpx;
}
.hot {
    width: 100%;
    text-align: center;
    color: #888888;
    font-size: 12rpx;
    line-height: 20rpx;
}
.news-content {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
}
.goods-item {
    width: 40%;
    flex-grow: 1;
    background-color: #ffffff;
    box-sizing: border-box;
    border-radius: 10rpx;
}
.goods-item:nth-child(odd) {
    margin: 0 10rpx 20rpx 20rpx;
}
.goods-item:nth-child(even) {
    margin: 0 20rpx 20rpx 10rpx;
}
.goods-img {
    width: 100%;
    height: 150 rpx;
    margin-bottom: 20rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}
.goods-brief {
    width: 100%;
    line-height: 30 rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}